<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MainMenu">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_main_menu_example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Идемо у Логин"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment_main_menu_example_2"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="20dp"
        android:padding="20dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_main_menu_example_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Идемо у дијалог"
        app:layout_constraintTop_toBottomOf="@id/fragment_main_menu_example"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
